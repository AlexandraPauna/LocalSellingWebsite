@model Licenta.Common.Entities.ApplicationUser

@{
    ViewBag.Title = "Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 page-sidebar">
            <aside>
                <div class="inner-box">
                    <div class="user-panel-sidebar">
                        <div class="collapse-box">
                            <h5 class="collapse-title no-border">
                                Contul Meu <a href="#MyClassified" aria-expanded="true" data-toggle="collapse"
                                                 class="pull-right">
                                    @*<i class="fa fa-angle-down"></i>*@
                                </a>
                            </h5>

                            <div class="panel-collapse collapse show" id="MyClassified">
                                <ul class="acc-list">
                                    <li>
                                        <a class="active" href='@Url.Action("Index", "Manage")'>
                                            <i class="icon-home"></i>
                                            Profilul Meu
                                        </a>
                                    </li>
                                    <li>
                                        <a href='@Url.Action("ChangeProfile", "Manage")'>
                                            <i class="icon-pencil"></i>
                                            Editeaza Profilul
                                        </a>
                                    </li>
                                    <li>
                                        <a href='@Url.Action("ChangePassword", "Manage")'>
                                            <i class="icon-lock"></i>
                                            Schimba Parola
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <!-- /.collapse-box  -->
                        <div class="collapse-box">
                            <h5 class="collapse-title">
                                Anunturi <a href="#MyAds" aria-expanded="true" data-toggle="collapse"
                                          class="pull-right">
                                    @*<i class="fa fa-angle-down"></i>*@
                                </a>
                            </h5>

                            <div class="panel-collapse collapse show" id="MyAds">
                                <ul class="acc-list">
                                    <li>
                                        <a href="@Url.Action("Personal","Product")">
                                            <i class="icon-docs"></i> Anunturile mele <span class="badge">@ViewBag.NrAds</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href='@Url.Action("Index", "Interests")'>
                                            <i class="icon-heart"></i>
                                            Anunturi favorite <span class="badge badge-secondary">@ViewBag.NrInterests</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href='@Url.Action("Index", "Rating")'>
                                            <i class="icon-star"></i>
                                            Calificativele Mele <span class="badge badge-secondary">@ViewBag.NrRatings</span>
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href='@Url.Action("Index", "Conversation")'>
                                            <i class="icon-mail"></i> Mesaje <span class="badge">@ViewBag.UnreadMessages</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- /.collapse-box  -->

                        <div class="collapse-box">
                            <h5 class="collapse-title">
                                Inchidere Cont <a href="#TerminateAccount"
                                                     aria-expanded="true" data-toggle="collapse"
                                                     class="pull-right">
                                    @*<i class="fa fa-angle-down"></i>*@
                                </a>
                            </h5>

                            <div class="panel-collapse collapse show" id="TerminateAccount">
                                <ul class="acc-list">
                                    <li>
                                        <a href='@Url.Action("Delete", "Manage")'>
                                            <i class="icon-cancel-circled "></i> Sterge-ti Contul
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- /.collapse-box  -->
                    </div>
                </div>
                <!-- /.inner-box  -->

            </aside>
        </div>
        <!--/.page-sidebar-->

        <div class="col-md-9 page-content">
            <div class="inner-box">
                <div class="row">
                    <div class="col-md-5 col-xs-4 col-xxs-12">
                        <h3 class="no-padding text-center-480 useradmin">
                            <a href="">
                                <img class="userImg"
                                     src="@Url.Action("UserPhotos", "Account", new { id = Model.Id } )"
                                     alt="user"> @Model.UserName
                            </a>
                        </h3>
                    </div>
                    <div class="col-md-7 col-xs-8 col-xxs-12">
                        <div class="header-data text-center-xs">
                            <div class="hdata">
                                <div class="mcol-left">
                                    <!-- Icon with red background -->
                                    <i class="fas fa-envelope ln-shadow"></i>
                                </div>
                                <div class="mcol-right">
                                    <!-- Number of visitors -->
                                    <p><a href="@Url.Action("Index","Conversation")">@ViewBag.UnreadMessages</a> <em>Mesaje noi</em></p>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <!-- Traffic data -->
                            <div class="hdata">
                                <div class="mcol-left">
                                    <!-- Icon with red background -->
                                    <i class="fa fa-eye ln-shadow"></i>
                                </div>
                                <div class="mcol-right">
                                    <!-- Number of visitors -->
                                    <p><a href="@Url.Action("Personal","Product")">@(ViewBag.AdViews/2)</a> <em>Vizite anunturi</em></p>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <!-- revenue data -->
                            <div class="hdata">
                                <div class="mcol-left">
                                    <!-- Icon with green background -->
                                    <i class="icon-th-thumb ln-shadow"></i>
                                </div>
                                <div class="mcol-right">
                                    <!-- Number of visitors -->
                                    <p><a href="@Url.Action("Personal","Product")">@ViewBag.NrAds</a><em>Anunturi postate</em></p>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <!-- revenue data -->
                            <div class="hdata">
                                <div class="mcol-left">
                                    <!-- Icon with blue background -->
                                    <i class="fa fa-user ln-shadow"></i>
                                </div>
                                <div class="mcol-right">
                                    <!-- Number of visitors -->
                                    <p><a href="@Url.Action("Index","Rating")">@ViewBag.NrRatings</a> <em>Calificative primite</em></p>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="inner-box">
                <div class="welcome-msg">
                    <h3 class="page-sub-header2 clearfix no-padding">Bine ai venit, @Model.UserName</h3>
                    <span class="page-sub-header-sub small">Cont creat la: @Model.Date.ToString("dd.MM.yyyy")</span>
                </div>
                <div id="accordion" class="panel-group">
                    <div class="card card-default">
                        <div class="card-header">
                            <h4 class="card-title">
                                <a href="#collapseB1" aria-expanded="true" data-toggle="collapse">
                                    Informatiile contului
                                </a>
                            </h4>
                        </div>
                        <div class="panel-collapse collapse show" id="collapseB1">
                            <div class="card-body">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Prenume</label>

                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" readonly="readonly" placeholder="@Model.FirstName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Nume</label>

                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" readonly="readonly" placeholder="@Model.LastName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Email</label>

                                        <div class="col-sm-9">
                                            <input type="email" class="form-control" readonly="readonly"
                                                   placeholder="@Model.Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Localitate</label>

                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" readonly="readonly" placeholder="@Model.City.CityName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Phone" class="col-sm-3 control-label">Telefon</label>

                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="Phone" readonly="readonly"
                                                   placeholder="@Model.PhoneNumber">
                                        </div>
                                    </div>
                                    @if (Model.RatingScore != null)
                                    {
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Calificativ</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" readonly="readonly" placeholder="@Model.RatingScore">
                                            </div>
                                        </div>
                                    }
                                    @if (Model.CommunicationScore != null)
                                    {
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" >Calificativ comunicare</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" readonly="readonly" placeholder="@Model.CommunicationScore">
                                            </div>
                                        </div>
                                    }
                                    @if (Model.AccuracyScore != null)
                                    {
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" style="display:inline">Calificativ acuratetea descrierii anuturilor</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" readonly="readonly" placeholder="@Model.AccuracyScore">
                                            </div>
                                        </div>
                                    }
                                    @if (Model.TimeScore != null)
                                    {
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label" style="display:inline">Calificativ timpul de onorare al comenzii</label>

                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" readonly="readonly" placeholder="@Model.TimeScore">
                                            </div>
                                        </div>
                                    }


                                </form>
                            </div>
                        </div>
                    </div>
                    
                    
                </div>
                <!--/.row-box End-->

            </div>
        </div>
        <!--/.page-content-->
    </div>
    <!--/.row-->
</div>
<!--/.container-->
