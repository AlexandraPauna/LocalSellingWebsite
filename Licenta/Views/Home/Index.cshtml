
@using Licenta.Common.Entities
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    @if (TempData.ContainsKey("message"))
    {
        <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
    }
    <div class="col-xl-12 content-box ">
        <div class="row row-featured row-featured-category">
            <div class="col-xl-12  box-title no-border">
                <div class="inner">
                    <h2>
                        <span>Gaseste in functie de</span>
                        Categorie <a href="@Url.Action("Index","Categories")" class="sell-your-item">
                            Vezi toate categoriile <i class="  icon-th-list"></i>
                        </a>
                    </h2>
                </div>
            </div>

            @foreach (var category in ViewBag.Categories)
            {
                <div class="col-xl-2 col-md-3 col-sm-3 col-xs-4 f-category">
                    <div class="inner">
                        <a href="/Categories/Show/@category.CategoryId">
                            <span class="imgBox">
                                <img src="@Url.Action("DisplayCategoryPhoto", "Categories", new { categoryId = category.CategoryId } )" class="img-responsive" alt="img">
                            </span>
                            <h6> @category.CategoryName </h6>
                        </a>
                    </div>
                </div>

            }
        </div>

    </div>

    <div style="clear: both"></div>

    @if (ViewBag.RecommendedProducts != null)
    {
        <div class="col-xl-12 content-box ">
            <div class="row row-featured">
                <div class="col-xl-12  box-title ">
                    <div class="inner">
                        <h2>
                            <span>Anunturi </span>
                            Sugerate <a href="category.html" class="sell-your-item">
                                View more <i class="  icon-th-list"></i>
                            </a>
                        </h2>

                    </div>
                </div>

                <div style="clear: both"></div>

                <div class=" relative  content featured-list-row  w100">

                    <nav class="slider-nav has-white-bg nav-narrow-svg">
                        <a class="prev">
                            <span class="nav-icon-wrap"></span>

                        </a>
                        <a class="next">
                            <span class="nav-icon-wrap"></span>
                        </a>
                    </nav>

                    <div class="no-margin featured-list-slider ">
                        @foreach (Product products in ViewBag.RecommendedProducts)
                        {
                            <div class="item">
                                <a href="@Url.Action("Show", "Product", new { id = products.ProductId})">
                                    <span class="item-carousel-thumb">
                                        <img class="img-responsive" src="@Url.Action("MainProductPhoto", "Home", new { prodId = products.ProductId})" alt="img">
                                    </span>
                                    <span class="item-name"> @products.Title  </span>
                                    <span class="price">  @products.Price </span>
                                </a>
                            </div>

                        }
                    </div>
                </div>

            </div>
        </div>

        <div style="clear: both"></div>
    }


    <div class="col-xl-12 content-box ">
        <div class="row row-featured">
