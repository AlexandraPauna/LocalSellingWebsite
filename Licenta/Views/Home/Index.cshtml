@section HomeImageSection{
    <div class="intro" style="background-image: url(../../Images/bg2.jpg);">
        <div class="container text-center">

            <h1 class="intro-title animated fadeInDown">

                GASESTE ANUNTUL PE CARE IL CAUTI
            </h1>

            <p class="sub animateme fittext3 animated fadeIn">
                Gaseste anunturi locale pe BootClassified rapid si usor
            </p>

            @using (Html.BeginForm("Index", "Search", FormMethod.Get@*,FormMethod.Post, new { @class = "form-group", @style = "max-width: 100%; width: 100%;" }*@))
            {
             <div class="row search-row animated fadeInUp">
                 <div class="col-xl-4 col-sm-4 search-col relative locationicon">
                     <i class="icon-location-2 icon-append"></i>
                     @Html.DropDownList("FromCity", new SelectList(ViewBag.Cities, "Value", "Text"), "Selectati locatia", new { id = "FromCity", name = "fromCity", placeholder = "Oras...", @class = "form-control locinput input-rel searchtag-input has-icon" });
                     @*<input type="text" name="fromCity" id="autocomplete-ajax"
                            class="form-control locinput input-rel searchtag-input has-icon"
                            placeholder="Oras..." value="">*@
                 </div>

                 <div class="col-xl-4 col-sm-4 search-col relative">
                        <i class="icon-docs icon-append"></i>
                        <input type="text" name="Search" class="form-control has-icon"
                            placeholder="Cauta..." value="">
                 </div>

                <div class="col-xl-4 col-sm-4 search-col">
                    <button type="submit" class="btn btn-primary btn-search btn-block  btn-gradient">
                    <i class="icon-search"></i><strong>Cauta</strong>
                    </button>
                </div>
              </div>
             }


        </div>
    </div>
    <!-- /.intro -->
}

