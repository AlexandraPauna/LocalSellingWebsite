<div class="container">
    <div class="row">
        <div class="col-md-9 page-content">
            <div class="inner-box category-content">
                <h2 class="title-2 uppercase">
                    <strong>
                        <i class="icon-pencil"></i> Editeaza Subcategoria
                    </strong>
                </h2>

                <div class="row">
                    <div class="col-sm-12">
                        <form method="post" action="/SubCategories/Edit/@Model.SubCategoryId" enctype="multipart/form-data" class="form-horizontal">
                            @Html.HttpMethodOverride(HttpVerbs.Put)
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="content-subheading">
                                <i class="icon-tag"></i>
                                <strong>
                                    Denumire si categoria aferenta
                                </strong>
                            </div>

                            <div class="form-group row">
                                @Html.Label("SubCategoryName", "Denumire", new { @class = "col-sm-3 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.SubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SubCategoryName, null, new { @class = "text-danger " })
                                   
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.Label("CategoryId", "Selectati categoria", new { @class = "col-sm-3 col-form-label" })
                                <div class="col-lg-8">
                                    <div class="mb10">
                                        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Value", "Text"), "Selectati categoria", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <!-- Button  -->
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <div style="clear:both"></div>
                                    <button class="btn btn-primary" type="submit">Modifica</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 reg-sidebar">
            <div class="reg-sidebar-inner text-center">
                <div class="promo-text-box">
                    <i class=" icon-pencil fa fa-4x icon-color-1"></i>

                    <h3><strong>Editeaza subcategoria</strong></h3>

                    <p>
                        Acest site iti ofera posibilitatea de a modifica subcategoriile
                        Modifica o subcategorie rapid si usor.
                    </p>
                </div>



            </div>
        </div>
        <!--/.reg-sidebar-->
    </div>
</div>
