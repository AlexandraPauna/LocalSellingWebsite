@model Licenta.Common.Entities.Category

@{
    ViewBag.Title = "Editare categorie";
}

<div class="container">
    <div class="row">
        <div class="col-md-9 page-content">
            <div class="inner-box category-content">
                <h2 class="title-2 uppercase">
                    <strong>
                        <i class="icon-pencil"></i> Editeaza Categoria
                    </strong>
                </h2>

                <div class="row">
                    <div class="col-sm-12">
                        <form method="post" action="/Categories/Edit/@Model.CategoryId" enctype="multipart/form-data" class="form-horizontal">
                            @Html.HttpMethodOverride(HttpVerbs.Put)
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="content-subheading">
                                <i class="icon-tag"></i>
                                <strong>
                                    Denumire Categorie
                                </strong>
                            </div>

                            <div class="form-group row">
                                @Html.Label("CategoryName", "Denumire", new { @class = "col-sm-3 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(m => m.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger " })
                                </div>
                            </div>

                            <div class="content-subheading">
                                <i class="icon-camera"></i>
                                <strong>
                                    Schimba Fotografia
                                </strong>
                            </div>

                            <div class="form-group row">
                                <label class = "col-md-2 control-label">Fotografia Curenta</label>
                                <div class="col-lg-4 col-lg-offset-2">
                                    <div class="mb10">
                                        <img class="img-fluid img-thumbnail" src="@Url.Action("DisplayCategoryPhoto", "Categories", new { categoryId = Model.CategoryId })" alt="Imagine produs">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(m => m.CategoryPhoto, new { @class = "col-md-2 control-label" })
                                <div class="col-lg-8">
                                    <div class="mb10">
                                        <input type="file" class="file" name="CategoryPhoto" id="fileUpload" value="@Model.CategoryPhoto" accept=".png,.jpg,.jpeg,.gif,.tif" data-preview-file-type="text" />
                                    </div>
                                </div>
                            </div>

                            <br />
                            <!-- Button  -->
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <div style="clear:both"></div>
                                    <button class="btn btn-primary" type="submit">Modifica</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 reg-sidebar">
            <div class="reg-sidebar-inner text-center">
                <div class="promo-text-box">
                    <i class=" icon-pencil fa fa-4x icon-color-1"></i>

                    <h3><strong>Editeaza categoria</strong></h3>

                    <p>
                        Acest site iti ofera posibilitatea de a modifica categoria
                        Modifica o categorie rapid si usor. 
                    </p>
                </div>



            </div>
        </div>
        <!--/.reg-sidebar-->
    </div>
</div>
