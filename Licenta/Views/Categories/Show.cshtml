
@model Licenta.Common.Entities.SubCategory

@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "Afisare categorie";
}

<h2>@ViewBag.Title</h2>
<h1>@ViewBag.CategoryName</h1>
<br />

@if (ViewBag.Allow == true)
{
    <a class="btn btn-sm btn-info" href="/Categories/Edit/@ViewBag.CategoryId">Modifica categoria</a>
    <br /><br />
    <form method="post" action="/Categories/Delete/@ViewBag.CategoryId">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <button class="btn btn-sm btn-danger" type="submit">Sterge categoria</button>
    </form>
}
<br />
<br />

<ul class="nav flex-column">
    @foreach (var subCategory in ViewBag.SubCategories)
    {
        <li class="nav-item">
            <a class="navbar-link" href="/Subcategories/Show/@subCategory.SubCategoryId">@subCategory.SubCategoryName</a>
        </li>

    }
</ul>

<br />
<br />
@if (ViewBag.Allow == true)
{
    <a class="btn btn-sm btn-info" href="/SubCategories/New">Adauga subcategorie</a>
    <br /><br />
}

<hr />
<a class="btn btn-sm btn-success" href="/Categories/Index">Inapoi la toate categoriile</a>
<br />
<br />

